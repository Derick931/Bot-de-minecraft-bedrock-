<body>
  <h1>Estado del Bot de Minecraft Bedrock</h1>
  <div class="estado" id="estado"></div>
  <div class="info" id="info"></div>
  <button id="activar">Activar Bot</button>

  <script>
    function actualizarEstado() {
      fetch('/estado')
        .then(res => res.json())
        .then(data => {
          document.getElementById('estado').innerText = data.activo ? 'Activo ðŸŸ¢' : 'Inactivo ðŸ”´';
          document.getElementById('info').innerText = data.info;
        });
    }

    document.getElementById('activar').onclick = function() {
      fetch('/activar', {method: 'POST'})
        .then(() => actualizarEstado());
    };

    actualizarEstado();
    setInterval(actualizarEstado, 5000); // actualiza cada 5 segundos
  </script>
</body>
</html>
